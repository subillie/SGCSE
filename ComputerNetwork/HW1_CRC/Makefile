 # ** DON'T SUBMMIT!!! **

all:	# command 'make' complies the crc_encoder and crc_decoder with g++
	@g++ -g crc_encoder_20200422.cc -o crc_encoder
	@g++ -g crc_decoder_20200422.cc -o crc_decoder
	@printf "/* Encoder and decoder are ready! */\n"

clean:	# command 'make clean' removes all the files generated by the makefile
	@rm -f crc_encoder crc_decoder
	@rm -f codestream.tx datastream.rx
	@rm -f codedstream.tx codedstream.rx
	@rm -f result.txt
	@printf "Done with MAKE CLEAN!\n"

re: clean all

.Phony: all clean re